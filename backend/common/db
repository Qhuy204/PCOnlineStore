const mysql = require('mysql2');

// Kết nối MySQL
const db = mysql.createConnection({
  host: 'localhost',
  user: 'root',
  password: 'Qhuy204',  
  database: 'newcomputerstore' 
});

db.connect((err) => {
  if (err) {
    console.error("Lỗi kết nối tới MySQL:", err);
    return;
  }
  console.log("Đã kết nối tới MySQL!");
});

module.exports = db;
